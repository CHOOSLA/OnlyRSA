<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSA"
            android:textSize="40dp"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <kr.ac.sch.oopsla.rsa.process.CustomGraphView
            android:id="@+id/custom_graph_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:background="@color/material_dynamic_tertiary60"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <kr.ac.sch.oopsla.rsa.process.HeartRate
            android:id="@+id/heartrate"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/material_dynamic_tertiary60"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@drawable/image_progressbar_time"/>
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="300dp"
                android:layout_height="30dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/custom_drawable_progressbar"/>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_start"
                android:text="START"
                android:layout_width="100dp"
                android:layout_height="50dp"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/button_stop"
                android:text="STOP"
                android:layout_width="100dp"
                android:layout_height="50dp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>